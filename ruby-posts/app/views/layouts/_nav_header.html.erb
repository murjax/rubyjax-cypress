<header>
  <section>
    <nav>
      <div class="hidden md:block p-2 bg-white shadow-lg" data-controller="full-nav">
        <div class="flex p-2 justify-between bg-white">
          <h3 class="text-2xl text-white">
            <% if user_signed_in? %>
              <%= link_to "Posts", posts_path, class: "px-1 text-black" %>
            <% else %>
              <%= link_to "Posts", "/", class: "px-1 text-black" %>
            <% end %>
          </h3>
          <div class="flex">
            <% if user_signed_in? %>
              <div class="overflow-hidden">
                <div class="flex p-2 items-center rounded-md hover:bg-slate-100">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                  </svg>
                  <button
                    class="ml-1 text-black font-medium"
                    data-action="click->full-nav#toggleSubmenu"
                    data-full-nav-options-target-param="full-posts-options"
                    data-test-id="posts_options"
                  >
                    Posts
                  </button>
                </div>
                <div id="full-posts-options" class="absolute hidden bg-white z-10">
                  <%= link_to "All Posts", posts_path, class: "block p-4 text-black font-medium hover:bg-slate-100" %>
                  <%= link_to "New Post", new_post_path, class: "block p-4 text-black font-medium hover:bg-slate-100", data: { test_id: "new_post" }%>
                </div>
              </div>
              <div class="overflow-hidden">
                <div class="flex p-2 items-center rounded-md hover:bg-slate-100">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                  </svg>
                  <button
                    class="ml-1 text-black font-medium"
                    data-action="click->full-nav#toggleSubmenu"
                    data-full-nav-options-target-param="full-account-options"
                    data-test-id="full-account-options"
                  >
                    Account
                  </button>
                </div>
                <div id="full-account-options" class="absolute hidden bg-white z-10">
                  <%= link_to "Settings", edit_user_registration_path, class: "block p-4 text-black font-medium hover:bg-slate-100" %>
                  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block p-4 text-black font-medium hover:bg-slate-100", data: { test_id: "sign_out" } %>
                </div>
              </div>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "p-2 rounded-md text-black font-medium hover:bg-slate-100" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "p-2 rounded-md text-black font-medium hover:bg-slate-100" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </section>
</header>
