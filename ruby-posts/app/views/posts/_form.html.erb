<div class="flex flex-col items-center mb-10">
  <%= form_with(
    model: post,
    local: true,
    class: "w-3/4"
  ) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col mb-4">
      <%= form.label :name, required: true, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= form.text_field :name, class: "border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= form.label :title, required: true, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= form.text_field :title, class: "border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= form.label :content, required: true, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= form.text_area :content, class: "border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>

    <%= form.submit class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold mt-4 py-2 px-4 rounded cursor-pointer" %>
  <% end %>
</div>
